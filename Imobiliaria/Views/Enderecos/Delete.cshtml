@model Imobiliaria.Models.Endereco

@{
    ViewBag.Title = "Excluir Endereço";
}

<h3>Tem certeza que deseja exluir este Endereço?</h3>
<hr>
<h4>Endereço do anuncio: <label class="text-danger"> @Model.AnuncioEndereco.Titulo </label></h4>
<div>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
           Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composto.TextEstado)
        </dd>

        <dt>
           Bairro
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composto.TextBairro)
        </dd>

        <dt>
           Cidade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Composto.TextCidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Numero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Logradouro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Logradouro)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cep)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cep)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Complemento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Complemento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Index")" class="btn btn-info">
                    Voltar para Lista <span class="glyphicon glyphicon-arrow-left"></span>
                </a>
                <input type="submit" value="Excluir Endereço" class="btn btn-default" />

            </div>
        </div>
    }
</div>
