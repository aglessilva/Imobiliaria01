@model Imobiliaria.Models.Anuncio



@if (Model != null)
{

    <div id="carousel-example-generic" class="carousel slide">
        <!-- Indicators -->
       

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="row alert alert-success">
                <div class="col-md-12 text-center">
                    <h3>@string.Format("{0:C}", Model.Valor)</h3> @Model.Descricao <br><b>precione a tecla Esc para sair</b>
                </div>
            </div>
      

            <div class="item active">
                <div class="row" style="margin:auto">
                    <div class="col-md-12 boxModal" >
                            @*<img src="~/Content/img/casa2.jpg" alt="casa 2" style="width:80%;" >*@
                        @{
                            var base64Active = Convert.ToBase64String(Model.Imagens.First().Path);
                            var imgSrcActive = String.Format("data:image/gif;base64,{0}", base64Active);
                            <img src='@imgSrcActive' style="max-width:100%; max-height:570px;" class="img-rounded" />
                            imgSrcActive = null;
                        }
                    </div>
                 </div>

                <div class="carousel-caption text-primary">
                  <b>Referencia: @Model.Id </b> - @Model.Titulo;
                </div>
            </div>

            
            @if (Model.Imagens.Count > 1)
            {
                Model.Imagens.Remove(Model.Imagens.First());
                foreach (var item in Model.Imagens)
                {
                    <div class="item">
                        <div class="row" style="margin:auto">
                            <div class="col-md-12 boxModal">
                                @{
                                    var base64 = Convert.ToBase64String(item.Path);
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                   <img src='@imgSrc' style="max-width:100%; max-height:550px;" class="img-rounded" />
                                }
                            </div>
                        </div>
                        <div class="carousel-caption text-primary">
                            <b>Descrição: </b> @item.Descricao; 
                        </div>
                    </div>
                }
            }

        </div>

        <!-- Controls -->
        @*<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="icon-prev"></span>
        </a>*@
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </div>
}