@model Imobiliaria.Models.ImagensAnuncio

@{
    ViewBag.Title = "Detalhes";
}

<h2 class="text-info">@Model.AnuncioCasa.Titulo</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AnuncioCasa.TipoAnuncio)
        </dt>

        <dd>
            @(Model.AnuncioCasa.TipoAnuncio.Equals("A") ? "Aluguel": "Venda")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.Path)
        </dt>

        <dd>
          @{
              var base64 = Convert.ToBase64String(Model.Path);
              var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
        <img src='@imgSrc' style="max-width:300px; max-height:300px;" class="img-thumbnail" />
        </dd>

    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("Index")" class="btn btn-info">
            Voltar para Lista <span class="glyphicon glyphicon-arrow-left"></span>
        </a>
        @Html.ActionLink("Editar Imagem", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })

    </div>
</div>
